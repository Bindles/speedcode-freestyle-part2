<p style="color: green"><%= notice %></p>

<% content_for :title, "Street fighters" %>

<h1>Street fighters</h1>

<!-- app/views/street_fighters/index.html.erb -->

<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="font-bold text-3xl">Street Fighter street_fighters</h1>
    <div class="flex items-center justify-end">
      <%= link_to "New street_fighter", new_street_fighter_path, class: "px-3 py-2 rounded bg-teal-500 hover:bg-teal-600 text-white" %>
    </div>
  </div>

  <%= turbo_frame_tag "street_fighters_data" do %>
    <div class="flex items-center p-3 bg-blue-400 text-black space-x-6 rounded">
      <%= link_to "Character", street_fighters_path(column: "character", direction: direction), class: "underline", data: { turbo_frame: "street_fighters_data" } %>
      <%= filter_arrow("character") %>
      <%= link_to "Move", street_fighters_path(column: "move",  direction: direction), class: "underline" %>
      <%= filter_arrow("move") %>
      <%= link_to "Reset filter", street_fighters_path, class: "underline" %>
    </div>
    <div id="street_fighters" class="divide-y dark:text-slate-700 mb-10">
      <% @street_fighters.each do |street_fighter| %>
        <div class="py-3">
          <%= render street_fighter %>
          <%= link_to "View street_fighter", street_fighter, class: "text-underline inline-block my-3", data: { turbo: false } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
