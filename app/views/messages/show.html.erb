<%= params.inspect %><br>
<div class="max-w-4xl mx-auto mt-8 p-6 bg-white shadow-lg rounded-lg">
  <div class="flex items-center space-x-4">
    <img src="<%= @message.sender.profile.avatar_url %>" alt="Sender Avatar" class="w-16 h-16 rounded-full">
    <div>
      <h1 class="text-xl font-bold text-gray-800">
        Message from <%= @message.sender.profile.username %>
      </h1>
      <p class="text-sm text-gray-500">
        Sent at <%= @message.created_at.strftime('%B %d, %Y at %I:%M %p') %>
      </p>
    </div>
  </div>
  <br>

  <div class="flex items-center space-x-4">
    <img src="<%= @message.recipient.profile.avatar_url %>" alt="recipient Avatar" class="w-16 h-16 rounded-full">
    <div>
      <h1 class="text-xl font-bold text-gray-800">
        Message to <%= @message.recipient.profile.username %>
      </h1>
      <p class="text-sm text-gray-500">
        Sent at <%= @message.created_at.strftime('%B %d, %Y at %I:%M %p') %>
      </p>
    </div>
  </div>  

  <div class="mt-6">
    <h2 class="text-lg font-semibold text-gray-700">Message Content:</h2>
    <p class="mt-2 text-gray-600 p-4 bg-gray-50 border rounded-lg">
      <%= @message.content %>
    </p>
  </div>

  <div class="mt-6 flex space-x-4">
    <%= link_to 'Back to Inbox', user_messages_path(current_user), 
                class: 'bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-lg' %>
    <%= link_to 'Delete Message', user_message_path(current_user, @message), 
                method: :delete, 
                data: { confirm: 'Are you sure you want to delete this message?' }, 
                class: 'bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg' %>
  </div>
</div>
